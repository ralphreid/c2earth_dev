= form_for @client_type do |f|
  - if @client_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@client_type.errors.count, "error")} prohibited this client_type from being saved:"
      %ul
        - @client_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :client_type
    = f.text_field :client_type
  .actions
    = f.submit 'Save'
