= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :name_alternate
    = f.text_field :name_alternate
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :prefix_id
    = f.number_field :prefix_id
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
