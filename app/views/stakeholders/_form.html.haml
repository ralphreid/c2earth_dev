= form_for @stakeholder do |f|
  - if @stakeholder.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stakeholder.errors.count, "error")} prohibited this stakeholder from being saved:"
      %ul
        - @stakeholder.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :stakeholder_company_id
    = f.number_field :stakeholder_company_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :info
    = f.text_area :info
  .actions
    = f.submit 'Save'
